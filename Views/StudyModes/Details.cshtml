@model EduCoreSuite.Models.StudyMode

@{
    ViewData["Title"] = "Study Mode Details";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 text-gray-800">Study Mode Details</h1>
            <p class="text-muted mb-0">View comprehensive information about this study mode</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit Study Mode
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Study Mode Information Card -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>@Model.Name
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="info-section mb-4">
                                <h6 class="text-muted mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Study Mode Information
                                </h6>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <strong class="text-gray-800">Mode Name:</strong>
                                    </div>
                                    <div class="col-sm-9">
                                        <span class="text-primary fw-bold fs-5">@Model.Name</span>
                                    </div>
                                </div>
                                <hr class="my-3">
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <strong class="text-gray-800">Mode ID:</strong>
                                    </div>
                                    <div class="col-sm-9">
                                        <span class="badge bg-secondary fs-6">@Model.Id</span>
                                    </div>
                                </div>
                                <hr class="my-3">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <strong class="text-gray-800">Description:</strong>
                                    </div>
                                    <div class="col-sm-9">
                                        @if (!string.IsNullOrEmpty(Model.Description))
                                        {
                                            <div class="description-content">
                                                @Model.Description
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">No description provided</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Usage Information Card -->
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Usage Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">Usage Statistics</h6>
                        <p class="text-muted small">
                            This study mode is available for student enrollment across all programmes.
                            Usage statistics and enrollment data would be displayed here.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Quick Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="stat-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="icon-circle bg-primary text-white me-3">
                                    <i class="fas fa-hashtag"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Study Mode ID</div>
                                    <div class="fw-bold">@Model.Id</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="stat-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="icon-circle bg-info text-white me-3">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Mode Type</div>
                                    <div class="fw-bold">@Model.Name</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="stat-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="icon-circle bg-success text-white me-3">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Status</div>
                                    <div class="fw-bold text-success">Available</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit me-2"></i>Edit Study Mode
                        </a>
                        <a asp-controller="Students" asp-action="Index" asp-route-studyModeFilter="@Model.Id" 
                           class="btn btn-info btn-sm">
                            <i class="fas fa-users me-2"></i>View Students
                        </a>
                        <a asp-controller="Courses" asp-action="Index" asp-route-studyModeFilter="@Model.Id" 
                           class="btn btn-success btn-sm">
                            <i class="fas fa-book me-2"></i>View Courses
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" 
                           class="btn btn-outline-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this study mode?')">
                            <i class="fas fa-trash me-2"></i>Delete Study Mode
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.text-gray-800 {
    color: #5a5c69 !important;
}

.card {
    border: none;
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}

.icon-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
}

.stat-item {
    padding: 0.5rem 0;
}

.info-section hr {
    border-color: #e3e6f0;
}

.badge {
    font-size: 0.75rem;
}

.description-content {
    background-color: #f8f9fc;
    padding: 1rem;
    border-radius: 0.5rem;
    border-left: 4px solid #4e73df;
}
</style>
