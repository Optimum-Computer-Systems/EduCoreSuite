@model EduCoreSuite.Models.Staff

@{
    ViewData["Title"] = "Staff Details";
}

<h1>Staff Details</h1>

<div>
    <h4>Staff Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.FullName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.FullName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Title)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Title)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.StaffNumber)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.StaffNumber)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Role)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Role)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.StaffID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
