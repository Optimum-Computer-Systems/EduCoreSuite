@model EduCoreSuite.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="e.g. Computer Science" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" placeholder="e.g. CS" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Optional description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FacultyID" class="control-label">Faculty</label>
                <select asp-for="FacultyID" class="form-control" asp-items="ViewBag.FacultyID">
                    <option value="">-- Select Faculty --</option>
                </select>
                <span asp-validation-for="FacultyID" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>

            <div class="form-group">
                <label class="control-label">Department Heads</label>
                <select name="selectedStaff" class="form-control" asp-items="ViewBag.StaffList" multiple size="5"></select>
                <small class="form-text text-muted">Assign one or more heads</small>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        $(document).ready(function() {
            // Real-time validation for Department Name
            $('#Name').on('blur', function() {
                var name = $(this).val();
                var $errorSpan = $('span[data-valmsg-for="Name"]');
                
                if (name) {
                    $.get('@Url.Action("CheckDuplicateName", "Departments")', { name: name }, function(data) {
                        if (!data.isValid) {
                            $errorSpan.text(data.message).addClass('text-danger');
                            $('#Name').addClass('is-invalid');
                        } else {
                            $errorSpan.text('').removeClass('text-danger');
                            $('#Name').removeClass('is-invalid').addClass('is-valid');
                        }
                    });
                }
            });

            // Real-time validation for Department Code
            $('#Code').on('blur', function() {
                var code = $(this).val();
                var $errorSpan = $('span[data-valmsg-for="Code"]');
                
                if (code) {
                    $.get('@Url.Action("CheckDuplicateCode", "Departments")', { code: code }, function(data) {
                        if (!data.isValid) {
                            $errorSpan.text(data.message).addClass('text-danger');
                            $('#Code').addClass('is-invalid');
                        } else {
                            $errorSpan.text('').removeClass('text-danger');
                            $('#Code').removeClass('is-invalid').addClass('is-valid');
                        }
                    });
                }
            });
        });
    </script>
}
