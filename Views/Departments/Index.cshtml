@model IEnumerable<EduCoreSuite.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2 class="mb-3">Departments</h2>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New
    </a>

    <a asp-action="ExportCsv" class="btn btn-outline-success">
        <i class="bi bi-file-earmark-spreadsheet"></i> Export CSV
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Code)</th>
            <th>@Html.DisplayNameFor(model => model.First().Faculty.Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Code</td>
                <td>@item.Faculty?.Name</td>
                <td>@(item.IsActive ? "Active" : "Inactive")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
