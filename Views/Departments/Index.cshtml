@model IEnumerable<EduCoreSuite.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2 class="mb-3">Departments</h2>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle" aria-hidden="true"></i> Create New
    </a>

    <a asp-action="ExportCsv" class="btn btn-outline-success">
        <i class="bi bi-file-earmark-spreadsheet" aria-hidden="true"></i> Export CSV
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-sm">
        <thead class="table-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(m => m.First().Name)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.First().Code)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.First().Faculty.Name)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.First().IsActive)</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>@item.Faculty?.Name</td>
                    <td>@(item.IsActive ? "Active" : "Inactive")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square" aria-hidden="true"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-info">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash" aria-hidden="true"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
