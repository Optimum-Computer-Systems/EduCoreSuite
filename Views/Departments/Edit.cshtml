@model EduCoreSuite.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="DepartmentID" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label font-weight-bold">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Code" class="control-label font-weight-bold">Code</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label font-weight-bold">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FacultyID" class="control-label font-weight-bold">Faculty</label>
                <select asp-for="FacultyID" class="form-control" asp-items="ViewBag.FacultyID">
                    <option value="">-- Select Faculty --</option>
                </select>
                <span asp-validation-for="FacultyID" class="text-danger"></span>
            </div>

            <div class="form-group form-check mt-3">
                <input asp-for="IsActive" class="form-check-input" id="IsActiveCheckbox" />
                <label class="form-check-label" for="IsActiveCheckbox">Active</label>
            </div>

            <div class="form-group mt-3">
                <label class="control-label font-weight-bold">Department Heads</label>
                <select name="selectedStaff" class="form-control" asp-items="ViewBag.StaffList" multiple size="5" aria-label="Department Heads"></select>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    <script>
        $(document).ready(function() {
            var currentDepartmentId = @Model.DepartmentID;

            // Real-time validation for Department Name
            $('#Name').on('blur', function() {
                var name = $(this).val();
                var $errorSpan = $('span[data-valmsg-for="Name"]');
                
                if (name) {
                    $.get('@Url.Action("CheckDuplicateName", "Departments")', { name: name, excludeId: currentDepartmentId }, function(data) {
                        if (!data.isValid) {
                            $errorSpan.text(data.message).addClass('text-danger');
                            $('#Name').addClass('is-invalid');
                        } else {
                            $errorSpan.text('').removeClass('text-danger');
                            $('#Name').removeClass('is-invalid').addClass('is-valid');
                        }
                    });
                }
            });

            // Real-time validation for Department Code
            $('#Code').on('blur', function() {
                var code = $(this).val();
                var $errorSpan = $('span[data-valmsg-for="Code"]');
                
                if (code) {
                    $.get('@Url.Action("CheckDuplicateCode", "Departments")', { code: code, excludeId: currentDepartmentId }, function(data) {
                        if (!data.isValid) {
                            $errorSpan.text(data.message).addClass('text-danger');
                            $('#Code').addClass('is-invalid');
                        } else {
                            $errorSpan.text('').removeClass('text-danger');
                            $('#Code').removeClass('is-invalid').addClass('is-valid');
                        }
                    });
                }
            });
        });
    </script>
}
