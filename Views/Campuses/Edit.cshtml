@model EduCoreSuite.Models.Campus

@{
    ViewData["Title"] = "Edit Campus";
}

<h1>Edit Campus</h1>

<h4>Campus</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="County" class="control-label"></label>
                <input asp-for="County" class="form-control" />
                <span asp-validation-for="County" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Constituency" class="control-label"></label>
                <input asp-for="Constituency" class="form-control" />
                <span asp-validation-for="Constituency" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Town" class="control-label"></label>
                <input asp-for="Town" class="form-control" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhysicalAddress" class="control-label"></label>
                <input asp-for="PhysicalAddress" class="form-control" />
                <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WebsiteURL" class="control-label"></label>
                <input asp-for="WebsiteURL" class="form-control" />
                <span asp-validation-for="WebsiteURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PostalAddress" class="control-label"></label>
                <input asp-for="PostalAddress" class="form-control" />
                <span asp-validation-for="PostalAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrincipalName" class="control-label"></label>
                <input asp-for="PrincipalName" class="form-control" />
                <span asp-validation-for="PrincipalName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TVETRegistrationNumber" class="control-label"></label>
                <input asp-for="TVETRegistrationNumber" class="form-control" />
                <span asp-validation-for="TVETRegistrationNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KUCCPSCode" class="control-label"></label>
                <input asp-for="KUCCPSCode" class="form-control" />
                <span asp-validation-for="KUCCPSCode" class="text-danger"></span>
            </div>

            <div class="form-check mt-3">
                <input asp-for="IsMainCampus" class="form-check-input" />
                <label asp-for="IsMainCampus" class="form-check-label"></label>
            </div>

            <div class="form-check mt-2">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to Campus List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        $(document).ready(function() {
            var currentCampusId = @Model.Id;

            // Real-time validation for Campus Code
            $('#Code').on('blur', function() {
                var code = $(this).val();
                var $errorSpan = $('span[data-valmsg-for="Code"]');
                
                if (code) {
                    $.get('@Url.Action("CheckDuplicateCode", "Campuses")', { code: code, excludeId: currentCampusId }, function(data) {
                        if (!data.isValid) {
                            $errorSpan.text(data.message).addClass('text-danger');
                            $('#Code').addClass('is-invalid');
                        } else {
                            $errorSpan.text('').removeClass('text-danger');
                            $('#Code').removeClass('is-invalid').addClass('is-valid');
                        }
                    });
                }
            });

            // Real-time validation for Campus Name
            $('#Name').on('blur', function() {
                var name = $(this).val();
                var $errorSpan = $('span[data-valmsg-for="Name"]');
                
                if (name) {
                    $.get('@Url.Action("CheckDuplicateName", "Campuses")', { name: name, excludeId: currentCampusId }, function(data) {
                        if (!data.isValid) {
                            $errorSpan.text(data.message).addClass('text-danger');
                            $('#Name').addClass('is-invalid');
                        } else {
                            $errorSpan.text('').removeClass('text-danger');
                            $('#Name').removeClass('is-invalid').addClass('is-valid');
                        }
                    });
                }
            });

            // Real-time validation for Email
            $('#Email').on('blur', function() {
                var email = $(this).val();
                var $errorSpan = $('span[data-valmsg-for="Email"]');
                
                if (email) {
                    $.get('@Url.Action("CheckDuplicateEmail", "Campuses")', { email: email, excludeId: currentCampusId }, function(data) {
                        if (!data.isValid) {
                            $errorSpan.text(data.message).addClass('text-danger');
                            $('#Email').addClass('is-invalid');
                        } else {
                            $errorSpan.text('').removeClass('text-danger');
                            $('#Email').removeClass('is-invalid').addClass('is-valid');
                        }
                    });
                }
            });

            // Real-time validation for Phone Number
            $('#PhoneNumber').on('blur', function() {
                var phone = $(this).val();
                var $errorSpan = $('span[data-valmsg-for="PhoneNumber"]');
                
                if (phone) {
                    $.get('@Url.Action("CheckDuplicatePhone", "Campuses")', { phone: phone, excludeId: currentCampusId }, function(data) {
                        if (!data.isValid) {
                            $errorSpan.text(data.message).addClass('text-danger');
                            $('#PhoneNumber').addClass('is-invalid');
                        } else {
                            $errorSpan.text('').removeClass('text-danger');
                            $('#PhoneNumber').removeClass('is-invalid').addClass('is-valid');
                        }
                    });
                }
            });
        });
    </script>
}
