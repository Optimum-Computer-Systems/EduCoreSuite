@model EduCoreSuite.Models.Campus

@{
    ViewData["Title"] = "Delete Campus";
}

<div class="container mt-4">
    <!-- Back Link -->
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-semibold">
            ← Back to Campus List
        </a>
    </div>

    <!-- Page Heading -->
    <h2 class="fw-bold text-danger mb-4">Delete Campus</h2>
    <p class="text-muted">Are you sure you want to delete this campus? This action cannot be undone.</p>

    <!-- Campus Details -->
    <div class="card shadow-sm border-danger">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 fw-semibold">Code</dt>
                <dd class="col-sm-8">@Model.Code</dd>

                <dt class="col-sm-4 fw-semibold">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 fw-semibold">County</dt>
                <dd class="col-sm-8">@(Model.County?.CountyName ?? "Not specified")</dd>

                <dt class="col-sm-4 fw-semibold">Sub-County</dt>
                <dd class="col-sm-8">@(Model.SubCounty?.SubCountyName ?? "Not specified")</dd>

                <dt class="col-sm-4 fw-semibold">Town</dt>
                <dd class="col-sm-8">@Model.Town</dd>

                <dt class="col-sm-4 fw-semibold">Physical Address</dt>
                <dd class="col-sm-8">@Model.PhysicalAddress</dd>

                <dt class="col-sm-4 fw-semibold">Phone Number</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                <dt class="col-sm-4 fw-semibold">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4 fw-semibold">Website</dt>
                <dd class="col-sm-8">@Model.WebsiteURL</dd>

                <dt class="col-sm-4 fw-semibold">Postal Address</dt>
                <dd class="col-sm-8">@Model.PostalAddress</dd>

                <dt class="col-sm-4 fw-semibold">Principal Name</dt>
                <dd class="col-sm-8">@Model.PrincipalName</dd>

                <dt class="col-sm-4 fw-semibold">TVET Reg. Number</dt>
                <dd class="col-sm-8">@Model.TVETRegistrationNumber</dd>

                <dt class="col-sm-4 fw-semibold">KUCCPS Code</dt>
                <dd class="col-sm-8">@Model.KUCCPSCode</dd>

                <dt class="col-sm-4 fw-semibold">Main Campus</dt>
                <dd class="col-sm-8">@Model.IsMainCampus</dd>

                <dt class="col-sm-4 fw-semibold">Active</dt>
                <dd class="col-sm-8">@Model.IsActive</dd>
            </dl>
        </div>
    </div>

    <!-- Delete Form -->
    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger rounded-pill px-4 py-2 fw-semibold">
            Delete Campus
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 ms-2">
            Cancel
        </a>
    </form>
</div>
