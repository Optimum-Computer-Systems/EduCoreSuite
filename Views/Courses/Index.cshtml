@model IEnumerable<EduCoreSuite.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<p>
    <a asp-controller="Courses" asp-action="Index" class="btn btn-secondary me-2">Course List</a>
    <a asp-controller="Courses" asp-action="Create" class="btn btn-outline-secondary me-2">Create Course</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.CourseName)</th>
            <th>Department</th>
            <th>Programme</th>
            <th>Campus</th>
            <th>Exam Body</th>
            <th>Study Status</th>
            <th>Study Mode</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.Department?.Name</td>
                <td>@course.Programme?.Name</td>
                <td>@course.Campus?.Name</td>
                <td>@course.ExamBody?.Name</td>
                <td>@course.StudyStatus?.Name</td>
                <td>@course.StudyMode?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseID" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@course.CourseID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@course.CourseID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
