@model EduCoreSuite.Models.ViewModels.CourseFormViewModel

@{
    ViewData["Title"] = "Create Course";
}

<h2>Create Course</h2>
<p>
    <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-secondary me-2">Course List</a>
    <a asp-controller="Courses" asp-action="Create" class="btn btn-secondary me-2">Create Course</a>
</p>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Course.CourseName"></label>
        <input asp-for="Course.CourseName" class="form-control" />
        <span asp-validation-for="Course.CourseName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.Department"></label>
        <select asp-for="Course.Department" class="form-control" asp-items="Model.Departments"></select>
        <span asp-validation-for="Course.Department" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.Programme"></label>
        <select asp-for="Course.Programme" class="form-control" asp-items="Model.Programmes"></select>
        <span asp-validation-for="Course.Programme" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.StudyLevel"></label>
        <select asp-for="Course.StudyLevel" class="form-control" asp-items="Model.StudyLevels"></select>
        <span asp-validation-for="Course.StudyLevel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.Campus"></label>
        <select asp-for="Course.Campus" class="form-control" asp-items="Model.Campuses"></select>
        <span asp-validation-for="Course.Campus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.ExamBody"></label>
        <select asp-for="Course.ExamBody" class="form-control" asp-items="Model.ExamBodies"></select>
        <span asp-validation-for="Course.ExamBody" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Course.StudyStatus"></label>
        <select asp-for="Course.StudyStatus" class="form-control" asp-items="Model.StudyStatuses"></select>
        <span asp-validation-for="Course.StudyStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
