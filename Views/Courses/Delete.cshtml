@model EduCoreSuite.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.CourseName)</dt>
        <dd class="col-sm-10">@Model.CourseName</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department?.Name</dd>

        <dt class="col-sm-2">Programme</dt>
        <dd class="col-sm-10">@Model.Programme?.Name</dd>

        <dt class="col-sm-2">Campus</dt>
        <dd class="col-sm-10">@Model.Campus?.Name</dd>

        <dt class="col-sm-2">Exam Body</dt>
        <dd class="col-sm-10">@Model.ExamBody?.Name</dd>

        <dt class="col-sm-2">Study Status</dt>
        <dd class="col-sm-10">@Model.StudyStatus?.Name</dd>

        <dt class="col-sm-2">Study Mode</dt>
        <dd class="col-sm-10">@Model.StudyMode?.Name</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
