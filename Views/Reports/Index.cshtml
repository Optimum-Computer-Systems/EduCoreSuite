@using EduCoreSuite.Models.ViewModels
@model ReportFilterViewModel
<div class="container-fluid">
    <div class="row g-0">
        <!-- Sidebar with centered logo and nav -->
        <div class="col-md-2 p-3 d-flex flex-column align-items-center">
            <!-- Brand Logo and Name -->
            <a class="navbar-brand text-dark d-flex align-items-center fw-bold gap-2 mt-1.5 text-decoration-none"
               asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/Resources/Logo.svg" alt="Logo" width="28" height="28"
                     style="filter: brightness(0) saturate(100%); transform: scale(1.1);" />
                <span class="fs-4 text-dark">Optimum University</span>
            </a>

            <!-- Navigation Items -->
            <ul class="nav flex-column gap-3 w-100 align-items-center">
                <li class="nav-item w-100 text-center">
                    <a class="nav-link d-flex align-items-center gap-1 text-dark fw-semibold text-decoration-none"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/Resources/Dashboard.svg" width="20" height="20" alt="Dashboard Icon"
                             style="filter: brightness(0) saturate(100%); transform: scale(1.2); margin-top: 5px;" />
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="nav-item w-100 text-center">
                    <a class="nav-link d-flex justify-content-center align-items-center gap-2 text-dark fw-semibold text-decoration-none"
                       asp-area="" asp-controller="Students" asp-action="Index">
                        <img src="~/Resources/Register.svg" width="20" height="20" alt="Register Icon" />
                        <span>Register</span>
                    </a>
                </li>

                <li class="nav-item w-100 text-center">
                    <a class="nav-link d-flex justify-content-center align-items-center gap-2 text-dark fw-semibold text-decoration-none"
                       asp-area="" asp-controller="Courses" asp-action="Index">
                        <img src="~/Resources/Courses.svg" width="20" height="20" alt="Courses Icon" />
                        <span>Courses</span>
                    </a>
                </li>

                <li class="nav-item w-100 text-center">
                    <a class="nav-link d-flex justify-content-center align-items-center gap-2 text-dark fw-semibold text-decoration-none"
                       asp-area="" asp-controller="Reports" asp-action="Index">
                        <img src="~/Resources/Reports.svg" width="20" height="20" alt="Reports Icon" />
                        <span>Reports</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="col-md-10">
            <!-- Reports Section - Adjusted padding and alignment -->
            <div class="pt-4 ps-5">
                <h2 class="ms-5">Reports</h2> <!-- Added ms-5 to move right -->
                <h5 class="fw-semibold mb-3 ms-5">
                    <!-- Added ms-5 to move right -->
                    <a class="text-decoration-none text-dark d-flex align-items-center gap-2"
                       data-bs-toggle="collapse"
                       href="#filterPanel" role="button" aria-expanded="true" aria-controls="filterPanel"
                       onclick="toggleIcon(this)">
                        <img src="~/Resources/Filter.svg"
                             alt="Toggle Filters"
                             id="filterIcon"
                             width="18" height="18"
                             class="transition-icon"
                             style="transform: rotate(0deg); transition: transform 0.3s ease; margin-top: 1px;" />
                        <span>Filters</span>
                    </a>
                </h5>

                <!-- Filter Form -->
                <div class="collapse show" id="filterPanel">
                    <form id="filterForm" method="get" asp-action="Index" class="d-flex flex-column gap-3 ms-5">
                        <!-- Added ms-5 -->
                        <div class="w-50">
                            <label class="form-label">Department</label>
                            <select class="form-select" name="department"
                                    asp-for="SelectedDepartment" asp-items="Model.Departments">
                                <option value="">All Departments</option>
                            </select>
                        </div>

                        <div class="w-50">
                            <label class="form-label">Student</label>
                            <select class="form-select" name="studentId"
                                    asp-for="SelectedStudentId" asp-items="Model.Students">
                                <option value="">All Students</option>
                            </select>
                        </div>

                        <div class="w-50">
                            <label class="form-label">Course</label>
                            <select class="form-select" name="courseId"
                                    asp-for="SelectedCourseId" asp-items="Model.Courses">
                                <option value="">All Courses</option>
                            </select>
                        </div>

                        <input type="hidden" name="page" value="1" />

                        <!-- Reset button -->
                        <div class="mt-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-counterclockwise"></i> Reset Filters
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

   
      <!-- Reports Display Panel -->
    <div class="row justify-content-start mt-3">
        <div class="col-12 col-lg-12 offset-lg-0 ps-0">
            <div class="px-2">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-semibold mb-0">Report Display Panel</h5>
                    <div class="d-flex gap-2">
                        <!-- Generate Report Button -->
                        <button type="submit" form="filterForm" class="btn btn-primary rounded-pill">
                            <i class="bi bi-filter"></i> Generate Report
                        </button>

                        <!-- Download Report Button -->
                        <a asp-action="DownloadReport"
                           asp-route-department="@Model.SelectedDepartment"
                           asp-route-studentId="@Model.SelectedStudentId"
                           asp-route-courseId="@Model.SelectedCourseId"
                           target="_blank"
                           class="btn btn-outline-primary rounded-pill">
                            <i class="bi bi-download"></i> Download Report
                        </a>
                    </div>
                </div>

                <!-- Report Table -->
                <div class="table-responsive">
                    <table class="table table-bordered table-sm table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Student ID</th>
                                <th>Name</th>
                                <th>Course</th>
                                <th>Department</th>
                                <th>Campus</th>
                                <th>Year</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ReportResults?.Any() == true)
                            {
                                foreach (var row in Model.ReportResults)
                                {
                                    <tr>
                                        <td>@row.StudentId</td>
                                        <td>@row.StudentName</td>
                                        <td>@row.CourseName</td>
                                        <td>@row.DepartmentName</td>
                                        <td>@row.Campus</td>
                                        <td>@row.Year</td>
                                        <td><span class="badge bg-success">@row.Status</span></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        @if (Model.SelectedDepartment != null || Model.SelectedStudentId != null || Model.SelectedCourseId != null)
                                        {
                                            <span>No records found matching your filters.</span>
                                        }
                                        else
                                        {
                                            <span>No enrollment records available.</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-3">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link"
                                       asp-route-page="@i"
                                       asp-route-department="@Model.SelectedDepartment"
                                       asp-route-studentId="@Model.SelectedStudentId"
                                       asp-route-courseId="@Model.SelectedCourseId">
                                        @i
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // Reset pagination to page 1 when any filter dropdown changes
        document.querySelectorAll('#filterForm select').forEach(select => {
            select.addEventListener('change', function () {
                document.querySelector('input[name="page"]').value = 1;
            });
        });

        // Toggle rotation on collapse/expand
        document.addEventListener('DOMContentLoaded', function () {
            const panel = document.getElementById('filterPanel');
            const icon = document.getElementById('filterIcon');

            if (!panel || !icon) return;

            // Set initial state
            if (panel.classList.contains('show')) {
                icon.style.transform = 'rotate(90deg)';
            } else {
                icon.style.transform = 'rotate(0deg)';
            }

            // Listen for expand/collapse events from Bootstrap
            panel.addEventListener('shown.bs.collapse', function () {
                icon.style.transform = 'rotate(90deg)';
            });

            panel.addEventListener('hidden.bs.collapse', function () {
                icon.style.transform = 'rotate(0deg)';
            });
        });
    </script>
}