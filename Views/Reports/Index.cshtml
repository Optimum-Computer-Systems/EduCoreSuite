@using EduCoreSuite.Models.ViewModels
@model ReportFilterViewModel

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 bg-light vh-100 p-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Students" asp-action="Index">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Courses" asp-action="Index">Courses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                </li>
            </ul>
        </div>

        <!-- Main Panel -->
        <div class="col-md-10 p-4">
            <h2 class="fw-bold">Reports</h2>

            <!-- Filters -->
            <h5 class="fw-semibold mb-3">Filters <i class="bi bi-sliders2-vertical"></i></h5>

            <form id="filterForm" method="get" asp-action="Index" class="d-flex flex-column gap-3">
                <div class="w-50">
                    <label class="form-label">Department</label>
                    <select class="form-select" name="department"
                            asp-for="SelectedDepartment" asp-items="Model.Departments">
                        <option value="">All Departments</option>
                    </select>
                </div>

                <div class="w-50">
                    <label class="form-label">Student</label>
                    <select class="form-select" name="studentId"
                            asp-for="SelectedStudentId" asp-items="Model.Students">
                        <option value="">All Students</option>
                    </select>
                </div>

                <div class="w-50">
                    <label class="form-label">Course</label>
                    <select class="form-select" name="courseId"
                            asp-for="SelectedCourseId" asp-items="Model.Courses">
                        <option value="">All Courses</option>
                    </select>
                </div>

                <input type="hidden" name="page" value="1" />

                <div class="mt-2">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-filter"></i> Apply Filters
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                    </a>
                </div>
            </form>


            <!-- Report Header with Buttons -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-semibold mb-0">Report Display Panel</h5>
                <div>
                    <a asp-action="DownloadReport"
                       asp-route-department="@Model.SelectedDepartment"
                       asp-route-studentId="@Model.SelectedStudentId"
                       asp-route-courseId="@Model.SelectedCourseId"
                       target="_blank"
                       class="btn btn-outline-primary rounded-pill">
                        <i class="bi bi-download"></i> Download Report
                    </a>
                </div>
            </div>
            <!-- Report Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-sm table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Course</th>
                            <th>Department</th>
                            <th>Campus</th>
                            <th>Year</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ReportResults?.Any() == true)
                        {
                            foreach (var row in Model.ReportResults)
                            {
                                <tr>
                                    <td>@row.StudentId</td>
                                    <td>@row.StudentName</td>
                                    <td>@row.CourseName</td>
                                    <td>@row.DepartmentName</td>
                                    <td>@row.Campus</td>
                                    <td>@row.Year</td>
                                    <td><span class="badge bg-success">@row.Status</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    @if (Model.SelectedDepartment != null || Model.SelectedStudentId != null || Model.SelectedCourseId != null)
                                    {
                                        <span>No records found matching your filters.</span>
                                    }
                                    else
                                    {
                                        <span>No enrollment records available.</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   asp-route-page="@i"
                                   asp-route-department="@Model.SelectedDepartment"
                                   asp-route-studentId="@Model.SelectedStudentId"
                                   asp-route-courseId="@Model.SelectedCourseId">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Reset page to 1 when filters change
        document.querySelectorAll('#filterForm select').forEach(select => {
            select.addEventListener('change', function() {
                document.querySelector('input[name="page"]').value = 1;
            });
        });
    </script>
}