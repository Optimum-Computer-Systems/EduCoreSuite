@model EduCoreSuite.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 bg-light vh-100 p-3">
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link text-dark fw-semibold" asp-page="/Dashboard">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link text-dark fw-semibold" asp-page="/Students/Index">Register</a></li>
                <li class="nav-item"><a class="nav-link text-dark fw-semibold" asp-page="/Courses/Index">Courses</a></li>
                <li class="nav-item"><a class="nav-link text-dark fw-semibold" asp-page="/Reports/Index">Reports</a></li>
            </ul>
        </div>
         

        <!-- Main Dashboard Content -->
        <div class="col-md-10 p-4">
            <h2 class="mb-4">Dashboard</h2>

            <!-- Summary Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="bg-white border rounded p-3 text-center">
                        <h6>Total Students</h6>
                        <h3>@Model.TotalStudents</h3>
                        <span class="@(Model.StudentGrowthPercent < 0 ? "text-danger" : "text-success")">
                            @(Model.StudentGrowthPercent >= 0 ? "+" : "")@Model.StudentGrowthPercent.ToString("F1")%
                        </span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="bg-white border rounded p-3 text-center">
                        <h6>Total Courses</h6>
                        <h3>@Model.TotalCourses</h3>
                        <span class="@(Model.CourseGrowthPercent < 0 ? "text-danger" : "text-success")">
                            @(Model.CourseGrowthPercent >= 0 ? "+" : "")@Model.CourseGrowthPercent.ToString("F1")%
                        </span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="bg-white border rounded p-3 text-center">
                        <h6>Total Enrollments</h6>
                        <h3>@Model.TotalEnrollments</h3>
                        <span class="@(Model.EnrollmentGrowthPercent < 0 ? "text-danger" : "text-success")">
                            @(Model.EnrollmentGrowthPercent >= 0 ? "+" : "")@Model.EnrollmentGrowthPercent.ToString("F1")%
                        </span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="bg-white border rounded p-3 text-center">
                        <h6>Total Sessions</h6>
                        <h3>@Model.TotalSessions</h3>
                        <span class="@(Model.SessionGrowthPercent < 0 ? "text-danger" : "text-success")">
                            @(Model.SessionGrowthPercent >= 0 ? "+" : "")@Model.SessionGrowthPercent.ToString("F1")%
                        </span>
                    </div>
                </div>
            </div>

            <!-- Activity & Top Courses -->
            <div class="row">
                <!-- Activity Feed -->
                <div class="col-md-8">
                    <h4>Recent Activity Feed</h4>
                    <ul class="list-group">
                        @if (Model.RecentActivities.Any())
                        {
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <li class="list-group-item">
                                    <strong>@activity.Title</strong> — @activity.Description<br />
                                    <small class="text-muted">@activity.TimeAgo</small>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item">No recent activities recorded.</li>
                        }
                    </ul>
                </div>

                <!-- Most Enrolled Courses -->
                <div class="col-md-4">
                    <h4>Most Enrolled Courses</h4>
                    <ul class="list-group">
                        @if (Model.TopCourses.Any())
                        {
                            @foreach (var course in Model.TopCourses)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @course.CourseName
                                    <span class="badge bg-primary">@course.StudentCount</span>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item">No enrollment data available.</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
