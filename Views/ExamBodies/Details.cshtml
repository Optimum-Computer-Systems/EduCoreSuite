@model EduCoreSuite.Models.ExamBody

@{
    ViewData["Title"] = "Exam Body Details";
    ViewData["PageHeader"] = "Exam Body Details";
    ViewData["Breadcrumb"] = "Exam Bodies / Details";
}

<div class="content-wrapper">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h1><i class="fas fa-certificate text-info me-2"></i>Exam Body Details</h1>
                <p class="text-muted">View detailed information about this exam body</p>
            </div>
            <div class="page-actions">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                    <i class="fas fa-edit me-1"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle me-2"></i>@Model?.Name
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="details-container">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-certificate text-primary me-2"></i>
                                    <strong>Exam Body Name</strong>
                                </div>
                                <div class="detail-value">
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                            </div>

                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-align-left text-secondary me-2"></i>
                                    <strong>Description</strong>
                                </div>
                                <div class="detail-value">
                                    @if (!string.IsNullOrEmpty(Model?.Description))
                                    {
                                        @Html.DisplayFor(model => model.Description)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description provided</span>
                                    }
                                </div>
                            </div>

                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-globe text-success me-2"></i>
                                    <strong>Country</strong>
                                </div>
                                <div class="detail-value">
                                    @if (!string.IsNullOrEmpty(Model?.Country))
                                    {
                                        @Html.DisplayFor(model => model.Country)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="action-buttons mt-4">
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Edit Exam Body
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                                <i class="fas fa-list me-2"></i>View All Exam Bodies
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
