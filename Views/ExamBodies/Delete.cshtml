@model EduCoreSuite.Models.ExamBody

@{
    ViewData["Title"] = "Delete Exam Body";
    ViewData["PageHeader"] = "Delete Exam Body";
    ViewData["Breadcrumb"] = "Exam Bodies / Delete";
}

<div class="content-wrapper">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h1><i class="fas fa-trash-alt text-danger me-2"></i>Delete Exam Body</h1>
                <p class="text-muted">Confirm deletion of this exam body</p>
            </div>
            <div class="page-actions">
                <a asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-outline-info me-2">
                    <i class="fas fa-eye me-1"></i>View Details
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Warning!</strong> Are you sure you want to delete this exam body? This action cannot be undone.
                        </div>

                        <div class="details-container">
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-certificate text-primary me-2"></i>
                                    <strong>Exam Body Name</strong>
                                </div>
                                <div class="detail-value">
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                            </div>

                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-align-left text-secondary me-2"></i>
                                    <strong>Description</strong>
                                </div>
                                <div class="detail-value">
                                    @if (!string.IsNullOrEmpty(Model?.Description))
                                    {
                                        @Html.DisplayFor(model => model.Description)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description provided</span>
                                    }
                                </div>
                            </div>

                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-globe text-success me-2"></i>
                                    <strong>Country</strong>
                                </div>
                                <div class="detail-value">
                                    @if (!string.IsNullOrEmpty(Model?.Country))
                                    {
                                        @Html.DisplayFor(model => model.Country)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <form asp-action="Delete" class="mt-4">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-actions">
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="fas fa-trash-alt me-2"></i>Yes, Delete Exam Body
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg ms-2">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
