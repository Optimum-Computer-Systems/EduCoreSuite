@model EduCoreSuite.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h2>Create Student</h2>
<p>
    <a asp-controller="Enrollment" asp-action="Index" class="btn btn-outline-secondary me-2">Enrollments</a>
    <a asp-controller="Students" asp-action="Index" class="btn btn-outline-secondary me-2">Student List</a>
    <a asp-action="Create" class="btn btn-secondary">Add Student</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!--Name details-->
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control"
                       placeholder="e.g. John Doe" maxlength="100" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!--Email details -->
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <!-- Phone Number-->
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control"
                       placeholder="0712345678 or +254712345678" maxlength="13" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Gender dropdown -->
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <!-- DOB date picker -->
            @{
                var maxDOB = DateTime.Today.AddYears(-16).ToString("yyyy-MM-dd");
            }
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control"
                       type="date"
                       max="@maxDOB" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <!-- Year-->
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="AdmissionNumber" class="control-label"></label>
                    <input asp-for="AdmissionNumber" class="form-control" placeholder="e.g. ADM2024-001" />
                    <span asp-validation-for="AdmissionNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Add Student" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

