@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const countySel = document.getElementById('countySel');
            const subCountySel = document.getElementById('subCountySel');
            const currentSubCounty = subCountySel.getAttribute('data-selected');

            function populateSubCounties(countyId) {
                fetch(`/Students/GetSubCounties?countyId=${countyId}`)
                    .then(r => r.json())
                    .then(data => {
                        subCountySel.innerHTML = '<option value="">-- Select Sub-county --</option>';
                        data.forEach(sc => {
                            const option = document.createElement('option');
                            option.value = sc.subCountyID;
                            option.text = sc.subCountyName;
                            if (currentSubCounty && option.value === currentSubCounty)
                                option.selected = true;
                            subCountySel.appendChild(option);
                        });
                    });
            }

            if (countySel.value)
                populateSubCounties(countySel.value);

            countySel.addEventListener('change', () => {
                populateSubCounties(countySel.value);
            });
        });
    </script>
    }   
 }
