@model IEnumerable<EduCoreSuite.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
</p>

<table class="table table-bordered table-striped table-responsive-sm">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Admission No</th>
            <th>Date of Birth</th>
            <th>Nationality</th>
            <th>ID Number</th>
            <th>Gender</th>
            <th>Religion</th>
            <th>Disability</th>
            <th>Medical</th>
            <th>Marital Status</th>
            <th>Co-Curricular</th>
            <th>Primary Phone</th>
            <th>Alt Phone</th>
            <th>Postal Code</th>
            <th>County</th>
            <th>SubCounty</th>
            <th>Town</th>
            <th>Ward</th>
            <th>Emergency Name</th>
            <th>Relationship</th>
            <th>Emergency Phone</th>
            <th>Emergency Email</th>
            <th>Emergency Address</th>
            <th>Course</th>
            <th>Department</th>
            <th>Faculty</th>
            <th>Program</th>
            <th>Exam Body</th>
            <th>Year</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.Email</td>
                <td>@student.AdmissionNumber</td>
                <td>@student.DOB</td>
                <td>@student.Nationality</td>
                <td>@student.IDNumber</td>
                <td>@student.Gender</td>
                <td>@student.Religion</td>
                <td>@student.Disability</td>
                <td>@student.Medical</td>
                <td>@student.MaritalStatus</td>
                <td>@student.CoCurricular</td>
                <td>@student.PrimaryPhone</td>
                <td>@student.AltPhone</td>
                <td>@student.PostalCode</td>
                <td>@student.County</td>
                <td>@student.SubCounty</td>
                <td>@student.Town</td>
                <td>@student.Ward</td>
                <td>@student.EmergencyName</td>
                <td>@student.Relationship</td>
                <td>@student.EmergencyPhone</td>
                <td>@student.EmergencyEmail</td>
                <td>@student.EmergencyAddress</td>
                <td>@student.Course</td>
                <td>@student.Department</td>
                <td>@student.Faculty</td>
                <td>@student.Program</td>
                <td>@student.ExamBody</td>
                <td>@student.Year</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@student.StudentID" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
