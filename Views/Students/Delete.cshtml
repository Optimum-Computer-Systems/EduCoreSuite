</dl>

<!-- ===== DELETE FORM ===== -->
<form asp-action="Delete">
    <input type="hidden" asp-for="StudentID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
