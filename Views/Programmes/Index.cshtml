@model IEnumerable<EduCoreSuite.Models.Programme>

@{
    ViewData["Title"] = "Programmes";
}

<h1>Programmes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Code)</th>
            <th>@Html.DisplayNameFor(m => m.Level)</th>
            <th>@Html.DisplayNameFor(m => m.AccreditedBy)</th>
            <th>@Html.DisplayNameFor(m => m.AccreditationDate)</th>
            <th>@Html.DisplayNameFor(m => m.DurationYears)</th>
            <th>@Html.DisplayNameFor(m => m.SemestersPerYear)</th>
            <th>@Html.DisplayNameFor(m => m.IsActive)</th>
            <th>@Html.DisplayNameFor(m => m.Department.Code)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                <td>@Html.DisplayFor(modelItem => item.Level)</td>
                <td>@Html.DisplayFor(modelItem => item.AccreditedBy)</td>
                <td>@Html.DisplayFor(modelItem => item.AccreditationDate)</td>
                <td>@Html.DisplayFor(modelItem => item.DurationYears)</td>
                <td>@Html.DisplayFor(modelItem => item.SemestersPerYear)</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>@Html.DisplayFor(modelItem => item.Department.Code)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProgrammeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProgrammeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProgrammeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
