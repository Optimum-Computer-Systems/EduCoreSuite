@model EduCoreSuite.Models.Programme

@{
    ViewData["Title"] = "Delete Programme";
}

<h1>Delete Programme</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Programme Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Code)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Code)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Level)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Level)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.AccreditedBy)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.AccreditedBy)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.AccreditationDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.AccreditationDate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.DurationYears)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.DurationYears)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.SemestersPerYear)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.SemestersPerYear)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.IsActive)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.IsActive)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Department.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Department.Name)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProgrammeID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
