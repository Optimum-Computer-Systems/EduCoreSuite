<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduCoreSuite</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    
    <!-- Add this for debugging -->
    <style>
        body { background-color: #f8f9fa; }
        .debug-border { border: 2px solid red; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">EduCoreSuite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Institutions" asp-action="Index">Institutions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Counties" asp-action="Index">Counties</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SubCounties" asp-action="Index">SubCounties</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main class="container my-4">
      
        
        @RenderBody()
    </main>

    <footer class="bg-dark text-light mt-5 py-3">
        <div class="container text-center">
            &copy; 2025 - EduCoreSuite
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>