@page
@model EducoreSuite.forgotpassword.ForgotPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-sm rounded-4 p-4" style="width: 100%; max-width: 420px;">
        <div class="text-center mb-4">
            <h3 class="fw-semibold mt-3">Forgot your password?</h3>
            <p class="text-muted small mb-0">Enter your email and we'll send you a reset code</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.InfoMessage))
        {
            <div class="alert alert-info text-center rounded-3 small">@Model.InfoMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger text-center rounded-3 small">@Model.ErrorMessage</div>
        }

        <form method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="e.g. you@example.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="mb-4 btn btn-primary w-100 rounded-3">Send Reset Code</button>
        </form>

        <div class="justify-content-md-between">
            <p class="text-center small">Remember your password?</p>
        </div>
        <div class="btn-outline-primary">
            <a asp-page="/Login" class="small text-decoration-none"
               style="border: 2px solid; border-image: linear-gradient(to right, #8e2de2, #4a00e0) 1; border-radius: 12px; padding: 6px 48px; display: inline-block; width: 100%; text-align: center;">
                Back to login
            </a>
        </div>
    </div>
</div>
