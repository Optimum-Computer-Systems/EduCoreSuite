@page
@model EduCoreSuite.Pages.Auth.UserProfileModel
@{
    ViewData["Title"] = "User Profile";
}
<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <p class="text-muted">Welcome back! Here's your profile information.</p>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg p-4 mt-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; font-size: 2rem;">
                        <i class="bi bi-person-fill"></i>
                    </div>
                    <div class="ms-3">
                        <h4 class="mb-0">@Model.UserProfile.FirstName @Model.UserProfile.LastName</h4>
                        <p class="text-muted mb-0">@@@Model.UserProfile.Username</p>
                    </div>
                    @if (Model.UserProfile.Role != null) // Check if Role is loaded
                    {
                            switch (Model.UserProfile.Role.ID){
                                case 1:
                                    <span class="badge bg-info text-dark ms-auto py-2 px-3 rounded-pill d-flex align-items-center">
                                        <i class="bi bi-person-fill me-1"></i> @Model.UserProfile.Role.Name 
                                    </span>
                                    break;

                                case 2:
                                    <span class="badge bg-info text-dark ms-auto py-2 px-3 rounded-pill d-flex align-items-center">
                                        <i class="bi bi-person-gear me-1"></i> @Model.UserProfile.Role.Name
                                    </span>
                                    break;

                                case 3:
                                    <span class="badge bg-info text-dark ms-auto py-2 px-3 rounded-pill d-flex align-items-center">
                                        <i class="bi bi-person-workspace me-1"></i> @Model.UserProfile.Role.Name
                                    </span>
                                    break;

                                case 4:
                                    <span class="badge bg-info text-dark ms-auto py-2 px-3 rounded-pill d-flex align-items-center">
                                        <i class="bi bi-person-fill me-1"></i> @Model.UserProfile.Role.Name
                                    </span>
                                    break;
                                default:
                                   
                                    break;
                            }

                    }
                </div>

                
                <div class="p-2 bg-light rounded mb-3">
                    <small class="text-uppercase text-muted">Email Address</small>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-envelope-fill me-2 text-muted"></i>
                        <span>@Model.UserProfile.Email</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="p-2 bg-light rounded">
                            <small class="text-uppercase text-muted">First Name</small>
                            <p class="mb-0">@Model.UserProfile.FirstName</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded">
                            <small class="text-uppercase text-muted">Last Name</small>
                            <p class="mb-0">@Model.UserProfile.LastName</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

