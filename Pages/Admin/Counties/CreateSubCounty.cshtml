@page "{countyId:int}"
@model EduCoreSuite.Pages.Admin.Counties.CreateSubCountyModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h2>Add SubCounty to @Model.CountyName</h2>
    <form method="post">
        <div class="mb-3">
            <label asp-for="SubCounty.SubCountyName" class="form-label"></label>
            <input asp-for="SubCounty.SubCountyName" class="form-control" />
            <span asp-validation-for="SubCounty.SubCountyName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Add</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
