@page
@model EduCoreSuite.Pages.Institutions.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h2>Institution Details</h2>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Institution.InstitutionName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Institution.Email</dd>
        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Institution.ContactNumber</dd>
        <dt class="col-sm-2">County</dt>
        <dd class="col-sm-10">@Model.Institution.County?.CountyName</dd>
        <dt class="col-sm-2">SubCounty</dt>
        <dd class="col-sm-10">@Model.Institution.SubCounty?.SubCountyName</dd>
    </dl>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
