@page "{id:int}"
@model EduCoreSuite.Pages.Institutions.InstitutionEditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h2>EDIT INSTITUTION</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="Institution.InstitutionName" class="control-label"></label>
            <input asp-for="Institution.InstitutionName" class="form-control" />
            <span asp-validation-for="Institution.InstitutionName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Institution.Email" class="control-label"></label>
            <input asp-for="Institution.Email" class="form-control" />
            <span asp-validation-for="Institution.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Institution.ContactNumber" class="control-label"></label>
            <input asp-for="Institution.ContactNumber" class="form-control" />
            <span asp-validation-for="Institution.ContactNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Institution.CountyID" class="control-label"></label>
            <select asp-for="Institution.CountyID" asp-items="Model.Counties" class="form-control"></select>
            <span asp-validation-for="Institution.CountyID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Institution.SubCountyID" class="control-label"></label>
            <select asp-for="Institution.SubCountyID" asp-items="Model.SubCounties" class="form-control"></select>
            <span asp-validation-for="Institution.SubCountyID" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}

