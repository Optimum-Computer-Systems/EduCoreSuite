@page
@model EduCoreSuite.Pages.Institutions.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h2>Delete Institution</h2>
    <h3>Are you sure you want to delete this Institution?</h3>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Institution.InstitutionName</dd>
        <dt class="col-sm-2">County</dt>
        <dd class="col-sm-10">@Model.Institution.County?.CountyName</dd>
        <dt class="col-sm-2">SubCounty</dt>
        <dd class="col-sm-10">@Model.Institution.SubCounty?.SubCountyName</dd>
    </dl>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
